//人口的百分比。



#include<iostream>
using namaspace std;

int main() {

	
	double world, US;
	float per;
	cout << "Enter the world's population:";
	cin >> world;
	cout << "Enter the population of the US:";
	cin >> US;
	per = US / world * 100;
	cout << "The population of the US is " << per << "% of the world population." << endl;


	system("pause");
	
}
