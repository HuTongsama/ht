//编写一个程序，要求用户以整数方式输入秒数(使用long或long long变量存储)，然后以天，小时，分钟和秒的方式显示这段时间。使用符号常量来表示每天有多少小时
//、每小时有多少分钟以及每分钟有多少秒。

#include<iostream>
using namespace std;

int main() {

	
	const int dayToHour = 24;
	const int hourToMin = 60;
	const int minToSec = 60;
	long inSecs;
	int outDays, outHours, outMins, outSecs;
	cout << "Enter the number of seconds:";
	cin >> inSecs;
	outSecs = inSecs%minToSec;
	outMins = inSecs / minToSec%hourToMin;
	outHours = inSecs / minToSec / hourToMin%dayToHour;
	outDays = inSecs / minToSec / hourToMin / dayToHour;

	cout << inSecs << " seconds = ";
	cout << outDays << " days, " << outHours << " hours, " << outMins << " minutes, " << outSecs << " seconds" << endl;


	system("pause");
	
}
