//编写一个程序，让用户输入三次40码跑的成绩(如果您愿意，也可让用户输入40米跑的成绩)，并显示次数和平均成绩。请使用一个array对象来存储数据(如果编译器不
//支持array类，请使用数组)。



#include<iostream>
#include<array>
using namespace std;

int main() {
	
	array<float, 3>grade;
	float avg;
	cout << "Enter the first grade:";
	cin >> grade[0];
	cout << "Enter the second grade:";
	cin >> grade[1];
	cout << "Enter the third grade:";
	cin >> grade[2];
	avg = (grade[0] + grade[1] + grade[2]) / 3;

	cout << "First:" << grade[0] << endl;
	cout << "Second:" << grade[1] << endl;
	cout << "Third:" << grade[2] << endl;
	cout << "Average:" << avg << endl;

	system("pause");
	
}
