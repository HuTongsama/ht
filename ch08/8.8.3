//Enter a string(q to quit):go away
//GO AWAY
//Next string(q to quit):good grief!
//GOOD GRIEF!
//Next string(q to quit):q
//Bye.



#include<iostream>
#include<string>
#include<cctype>

using namespace std;

void upper(string &str);

int main() {
	
	string str;
	cout << "Enter a string (q to quit): ";
	getline(cin, str);
	while (str != "q")
	{
		upper(str);
		cout << str << endl;
		cout << "Next string (q to quit): ";
		getline(cin, str);
	}
	cout << "Bye." << endl;
	system("pause");
}

void upper(string &str)
{
	for (auto i = str.begin(); i != str.end(); i++)
		*i = toupper(*i);
}
