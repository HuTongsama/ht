//简单的程序中使用该函数，以演示该函数是如何工作的。

#include<iostream>
#include<string>

using namespace std;

void func(string str);
void func(string str, int num);

int main() {
	
	int count = 5;
	while (count >= 0)
	{
		func("hello!", count);
		func("Hi!");
		count--;
	}
	system("pause");
}

void func(string str)
{
	cout << str << endl;
}
void func(string str, int num)
{
	if (num == 0)
		return;
	cout << str << endl;
}
